#"""штучный элемент Заметки на главном экране"""
<Note@MDFloatLayout>
    size_hint: None, None
    size: "140dp", "140dp"
    md_bg_color: .7,.7,.7,1
    my_title:""
    my_text: ""
    radius: [10, 10, 10, 10]
    MDLabel:
        id: myTitle
        text: root.my_title
        size_hint_y: None
        size_hint_x: None
        height: self.texture_size[1]
        #"""font_style: "Caption""""
        halign: "left"
        #"""theme_text_color: "Custom""""
        text_color: .1, .1, .1, 1
        y: root.y + root.height - self.height - 5
        x: root.x + 5
        md_bg_color: get_color_from_hex(colors["Green"]["A700"])
        -text_size: None, None
        size: self.texture_size
        opacity: 1

    MDLabel:
        id: myText
        text: root.my_text[0:10]+'...'
        size_hint_y: None
        size_hint_x: None
        height: self.texture_size[1]
        font_style: "Caption"
        halign: "left"
        #"""theme_text_color: "Custom""""
        text_color: .1, .1, .1, 1
        y: root.y + root.height - self.height*3.5 - 5
        x: root.x + 5
        md_bg_color: get_color_from_hex(colors["Green"]["A700"])
        -text_size: None, None
        size: self.texture_size
        opacity: 1
